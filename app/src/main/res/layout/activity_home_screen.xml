<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".java.HomeScreenActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fontFamily="@font/inter">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trang chủ"
                android:textAlignment="center"
                android:textColor="@color/main_green"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgBin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_avatar" />

        </LinearLayout>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Xin chào" />

        <!-- SearchView -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/inter"
            android:text="Bạn cần tìm gì?" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_searchview" />

        <!-- Ad Layout -->
        <LinearLayout
            android:id="@+id/llAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/ad_layout_rounded"
            android:orientation="horizontal"
            android:elevation="8dp">


            <ImageView
                android:id="@+id/imgDiscount1"
                android:layout_width="wrap_content"
                android:layout_height="121dp"
                android:layout_weight="1"
                android:padding="10dp"
                app:srcCompat="@mipmap/img_ad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Duy nhất hôm nay"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Giảm đến 30%"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnMuaNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/red_button_sale_ad"
                    android:fontFamily="@font/inter_medium"
                    android:text="Mua ngay" />
            </LinearLayout>
        </LinearLayout>

        <!-- Category Section -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Danh mục sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <!-- Category Images -->


        <!-- First Row -->

        <!-- Second Row (Text) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <!-- Highlighted Products -->

        <LinearLayout
            android:id="@+id/llHighlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Sản phẩm nổi bật"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnViewAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:drawableEnd="@mipmap/ic_arrow"
                android:fontFamily="@font/inter_medium"
                android:pointerIcon="arrow"
                android:text="Xem tất cả"
                android:textColor="#00B207"
                android:textStyle="bold" />

        </LinearLayout>

        <GridView
            android:id="@+id/gvHighlightedProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Tin tức nổi bật"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnViewAll2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:drawableEnd="@mipmap/ic_arrow"
                android:fontFamily="@font/inter_medium"
                android:pointerIcon="arrow"
                android:text="Xem tất cả"
                android:textColor="#00B207"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <GridView
                android:id="@+id/gvHighlightedBlog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/ad_layout_rounded"
            android:elevation="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDiscount2"
                android:layout_width="150dp"
                android:layout_height="128dp"
                app:srcCompat="@mipmap/img_ad2"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="TIỆC SALE MÙA HÈ"
                    android:textAlignment="viewStart"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="GIẢM ĐẾN 37%"
                    android:textAlignment="viewStart"
                    android:textColor="#FF8A00"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Cho tất cả danh mục"
                    android:textAlignment="viewStart"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/white"
        app:menu="@menu/bottom_menu"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        />
</RelativeLayout>


