<?xml version="1.0" encoding="utf-8"?>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Chính sách kiểm hàng"
                    android:textColor="#040303"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <!-- Definition Section -->
                <TextView
                    android:id="@+id/definition_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Định nghĩa"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/definition_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kiểm hàng là quá trình kiểm tra và kiểm soát số lượng, chất lượng và tình trạng của hàng hoá trong quá trình vận chuyển, lưu kho hoặc giao nhận. Quá trình này đảm bảo hàng hoá đúng số lượng, không bị hư hỏng và đáp ứng tiêu chuẩn chất lượng."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" />

                <!-- Regulations Section -->
                <TextView
                    android:id="@+id/regulations_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quy định"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Inspection Time -->
                <TextView
                    android:id="@+id/inspection_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– Thời điểm kiểm hàng: Plantique chấp nhận cho khách hàng đồng kiểm với nhân viên giao hàng tại thời điểm nhận hàng."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp" />

                <!-- Scope of Inspection -->
                <TextView
                    android:id="@+id/inspection_scope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– Phạm vi kiểm tra hàng hóa: Khách hàng được kiểm tra sản phẩm thực nhận theo các tiêu chí đã xác nhận."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp" />

                <!-- Handling Steps for Non-compliance -->
                <TextView
                    android:id="@+id/handling_non_compliance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– Các bước xử lý khi hàng hóa không như đơn đặt hàng: Liên hệ Hotline hoặc email để gặp bộ phận chăm sóc khách hàng."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp" />

                <!-- Complaint Channels -->
                <TextView
                    android:id="@+id/complaint_channels1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– Các kênh thông tin tiếp nhận khiếu nại của khách hàng: Hotline khiếu nại, Email."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/complaint_channels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="Hotline: 0366370098"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/complaint_channels_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="Email: plantiqueshop01@gmail."
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

