<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".BlogCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgButton2"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginStart="30dp"
            android:src="@mipmap/ic_backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Tin tức"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:text="Chào bạn,"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Bạn cần tìm kiếm gi?"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner"
                android:drawableStart="@mipmap/ic_search"
                android:drawableEnd="@mipmap/ic_find"
                android:drawablePadding="10dp"
                android:hint="Tìm kiếm"
                android:padding="10dp"
                android:textColor="#9E000000"
                android:textColorHint="#868889"
                android:textSize="13dp" />

            <ListView
                android:id="@+id/lvCart"
                android:layout_width="match_parent"
                android:layout_height="577dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
