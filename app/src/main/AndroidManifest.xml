<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileCommerceProject01"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".java.OrderConfirmActivity"
            android:exported="true" />
        <activity
            android:name=".java.AboutUsActivity"
            android:exported="true" />
        <activity
            android:name=".java.HomeScreenActivity"
            android:exported="true" />
        <activity
            android:name=".java.WelcomeActivity"
            android:exported="true" />
        <activity
            android:name=".java.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".java.ContactActivity"
            android:exported="true"/>
        <activity
            android:name=".java.CheckoutActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".java.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".java.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>